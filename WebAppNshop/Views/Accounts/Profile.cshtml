@model Nshopsolution.Data.Entities.AppUser
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="~/css/profile.css" type="text/css" />

</head>
<body>
    <div class="row gutters-sm main-body">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="~/img/avatar.jpg" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h4>@string.Concat(Model.FirstName + " ", Model.LastName)</h4>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <form asp-action="SaveProfile" method="get">
                <div style="color: green">@ViewBag.Msg</div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input class="form-control" placeholder="First name" asp-for="@Model.FirstName">
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Last Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input class="form-control" placeholder="Last name" asp-for="@Model.LastName">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">

                                <input class="form-control" placeholder="Email..." asp-for="@Model.Email" disabled>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mobile</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input class="form-control" placeholder="Mobile..." asp-for="@Model.PhoneNumber">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Credit card</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input class="form-control" placeholder="Card number..." asp-for="@Model.CardNumber">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Date of birth</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input class="form-control" placeholder="Dateofbirth..." asp-for="@Model.DateOfBirth">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <textarea class="form-control" asp-for="@Model.Address" placeholder="Address..."></textarea>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <input type="submit" class="btn btn-info" value="Save" />
                                @*<a asp-controller="Account" asp-action="SaveProfile" class="btn btn-info ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                    </svg>
                    Save
                </a>*@
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info" style="float:right">Back Home</a>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>

    </div>
</body>
</html>
