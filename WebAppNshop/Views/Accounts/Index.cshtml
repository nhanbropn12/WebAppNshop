@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .row {
        display: flex;
    }

    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
    }

    .main-body {
        margin-top: 72px;
        padding: 15px;
    }

    input.btn.btn-success.choosefile {
        width: 240px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(1,1,1,.2);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
        border-radius: 25px;
        border: 2px solid grey;
        padding: 25px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

    .nutbam--1 {
        background-color: #37497e;
    }

    .namgiua {
        display: flex;
        align-items: center;
    }

    .tensv {
        display: flex;
        align-items: center;
    }

    .nutbam {
        display: inline-block;
        text-decoration: none;
        background-color: transparent;
        border: none;
        outline: none;
        color: #fff;
        padding: 5px 20px;
        border-radius: 5px;
        transition: opacity 0.5s ease;
        cursor: pointer;
    }

        .nutbam:hover {
            color: #fff;
            opacity: 0.5;
        }

    .nutbam--1 {
        background-color: #04aa6d;
    }

    .nutbam--2 {
        background-color: #dc3545;
    }

    .nutbam--3 {
        background-color: #dc3545;
    }
</style>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="" class='rounded-circle' style="width:150px; height:150px;">
                            <div class="mt-3">
                                <h4>Nguyễn Nguyên Tính</h4>

                                <input type="file" name="HinhAnh" class="nutbam nutbam--1">
                            </div>
                            <div class="mt-3">
                                <h5>Kiểu hiển thị</h5>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Nguyễn Nguyên Tính
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        Tính Nguyễn Nguyên
                                    </label>
                                </div>

                            </div>
                            <div class="mt-3">
                                <button class="btn btn-warning">ĐỔI MẬT KHẨU</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">


                <div class="row d-flex namgiua">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Họ đệm</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" style="text-align: center; display: none;" name="MaSV" type="text" value="">
                        <input class="form-control" style="text-align:center" name="HoDem" type="text" value="">
                    </div>
                </div>
                <hr>
                <div class="row d-flex namgiua">
                    <div class="col-sm-3">
                        <h6 class="mb-0" style="margin-right:10px;">Tên</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" name="Ten" style="text-align:center" type="text" value="">
                    </div>
                </div>

                <hr>
                <div class="row d-flex namgiua">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">

                        <input class="form-control" name="Email" type="text" value="">
                    </div>
                </div>
                <hr>
                <div class="row namgiua">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Ngày sinh</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">

                        <input class="form-control" name="NgaySinh" type="text" value="" />
                    </div>
                </div>
                <hr>
                <div class="row namgiua">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Giới tính</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <select class="form-select" id="selectGT" name="GioiTinh" aria-label="Default select example">
                            @if (true)
                            {

                                <option value="true">Nam</option>
                                <option value="false" selected="selected">Nữ</option>

                            }
                            else
                            {

                                <option value="true" selected="selected">Nam</option>
                                <option value="false">Nữ</option>

                            }
                        </select>
                    </div>
                </div>

                <hr>
                <div class="row namgiua">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Số điện thoại</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">

                        <input class="form-control" id="tenlop" name="Lop" type="text" value="" />
                    </div>
                </div>
                <hr>

                <div class="row">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-outline-info" style="float:right">
                            Lưu
                        </button>
                        <a class="btn btn-info" href="@Url.Action("sv_Index", "SinhViens")">
                            Quay về
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
